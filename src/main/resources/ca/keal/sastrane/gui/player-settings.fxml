<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Slider?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.VBox" stylesheets="@sastrane.css"
         styleClass="player-settings">
    <fx:define>
        <ToggleGroup fx:id="aiOrHumanButtons" />
    </fx:define>
    
    <ImageView fx:id="img" />
    <Label fx:id="playerName" styleClass="player-name" text="Player" labelFor="$img" />
    
    <HBox>
        <ToggleButton styleClass="ai-or-human" text="Computer" userData="ai" toggleGroup="$aiOrHumanButtons" />
        <ToggleButton styleClass="ai-or-human" text="Human" userData="human" toggleGroup="$aiOrHumanButtons" />
    </HBox>
    
    <Label styleClass="ai-difficulty-label" text="Computer Difficulty" labelFor="$aiDifficulty" />
    <Slider fx:id="aiDifficulty" min="0" max="1" value="0.5" />
</fx:root>